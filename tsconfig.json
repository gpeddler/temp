{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "application/*": ["src/*"]
        },
        "lib": [
            "es2017",
            "dom"
        ],
        "sourceMap": true,
        "removeComments": true,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "noStrictGenericChecks": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
